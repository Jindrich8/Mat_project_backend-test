{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Application error response",
    "type": "object",
    "properties": {
        "user_info": {
            "$ref": "@/defs/types/errors/user_part_of_error.json"
        },
        "details": {
            "anyOf": [
                {
                    "$ref": "@/defs/errors/**/*.json"
                },
                {
                    "$ref": "@/defs/errors/*.json"
                },
                {
                    "$ref": "../task/*/error.json"
                }
            ]
        }
    },
    "required": [
        "user_info"
    ]
}