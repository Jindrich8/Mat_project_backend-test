{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Application error response",
    "type": "object",
    "properties": {
        "user_info": {
            "$ref": "@/defs/types/errors/user_part_of_error.json"
        },
        "details": {
            "anyOf": [
                {
                    "$ref": "@/defs/errors/**/*.json"
                },
                {
                    "$ref": "@/defs/errors/*.json"
                },
                {
                    "$ref": "@/task/**/error.json"
                },
                {
                    "$comment": "This is for some reason required to force php glob to generate at least 2 levels deep error.json files.",
                    "$ref": "@/task/*/**/error.json"
                }
            ]
        }
    },
    "required": [
        "user_info"
    ]
}
