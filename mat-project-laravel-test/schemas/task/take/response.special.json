{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Take task response",
  "type": "object",
  "$defs": {
    "exercise": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "exercise"
        },
        "instructions": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string"
            }
          },
          "required": [
            "content"
          ]
        },
        "details": {
          "anyOf": [
            {
              "$ref": "../../defs/exercises/*/take_response.json"
            }
          ]
        }
      },
      "required": [
        "type",
        "instructions",
        "details"
      ]
    },
    "group": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "group"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "content": {
                "type": "string"
              }
            },
            "required": [
              "content"
            ]
          }
        },
        "entries": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/exercise"
              },
              {
                "$ref": "#/$defs/group"
              }
            ]
          }
        }
      },
      "required": [
        "type",
        "resources",
        "entries"
      ]
    }
  },
  "properties": {
    "task": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "display": {
          "type":"string",
          "enum": [
            "vertical",
            "horizontal"
          ]
        },
        "description": {
          "type": "string"
        },
        "entries": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/group"
              },
              {
                "$ref": "#/$defs/exercise"
              }
            ]
          }
        }
      },
      "required": [
        "name",
        "display",
        "description",
        "entries"
      ]
    }
  },
  "required": [
    "task"
  ]
}