{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Task create request",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "task": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "tags":{
                    "type":"array",
                    "minItems":1,
                    "uniqueItems": true,
                    "items": {
                        "type":"integer"
                    }
                },
                "source": {
                    "type": "string"
                }
            },
            "required": [
                "source",
                "tags"
            ]
        }
    },
    "required": [
        "data"
    ]
}