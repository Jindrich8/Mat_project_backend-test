{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "$defs": {
        "value": {
            "type": "string"
        },
        "txtI": {
            "type": "object",
            "properties": {
                "value": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "cmb": {
            "type": "object",
            "properties": {
                "values": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "minItems": 1
                },
                "selectedIndex": {
                    "$comment": "Outside of bounds of the values array = same as if it was null, i.e. no item is selected",
                    "oneOf": [
                        {
                            "type": "integer",
                            "minimum": 0
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "values"
            ]
        }
    },
    "properties": {
        "exerType": {
            "const": "Doplnovacka"
        },
        "content": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/$defs/cmb"
                    },
                    {
                        "$ref": "#/$defs/txtI"
                    },
                    {
                        "$ref": "#/$defs/value"
                    }
                ],
                "minItems": 1,
                "contains": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/cmb"
                        },
                        {
                            "$ref": "#/$defs/txtI"
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "exerType",
        "content"
    ]
}