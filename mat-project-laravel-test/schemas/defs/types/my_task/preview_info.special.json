{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "../id.json"
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "difficulty": {
            "$ref": "../response/ordered_enum_element.json"
        },
        "class_range": {
            "$ref": "../response/ordered_enum_range.json"
        },
        "creation_timestamp": {
            "type":"string",
            "format":"timestamp"
        },
        "modification_timestamp": {
            "type":"string",
            "format":"timestamp"
        },
        "tags": {
            "type": "array",
            "items": {
                "$ref": "../response/enum_element.json"
            }
        }
    },
    "required": [
        "id",
        "name",
        "creation_timestamp",
        "difficulty",
        "class_range",
        "tags"
    ]
}