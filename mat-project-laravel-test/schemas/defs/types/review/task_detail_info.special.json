{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "../id.json"
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "difficulty": {
            "$ref": "../response/ordered_enum_element.json"
        },
        "class_range": {
            "$ref": "../response/ordered_enum_range.json"
        },
        "tags": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "$ref": "../response/enum_element.json"
            }
        },
        "author": {
            "$ref":"@/defs/types/review/author_info.json"
        }
    },
    "required": [
        "name",
        "difficulty",
        "class_range",
        "tags",
        "author"
    ]
}