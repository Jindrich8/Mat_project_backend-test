{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "$defs": {
        "value": {
            "type": "string"
        },
        "txtI": {
            "type": "object",
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "txtI"
                        },
                        "userValue": {
                            "type": "string"
                        },
                        "correctValue": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "userValue"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "txtI"
                        },
                        "correctValue": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "correctValue"
                    ]
                }
            ]
        },
        "cmb": {
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "cmb"
                        },
                        "userValue": {
                            "type": "string"
                        },
                        "correctValue": {
                            "type": [
                                "string"
                            ]
                        }
                    },
                    "required": [
                        "userValue"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "cmb"
                        },
                        "correctValue": {
                            "type": [
                                "string"
                            ]
                        }
                    },
                    "required": [
                        "correctValue"
                    ]
                }
            ]
        }
    },
    "properties": {
        "exerType": {
            "type": "string",
            "const": "FillInBlanks"
        },
        "content": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/$defs/cmb"
                    },
                    {
                        "$ref": "#/$defs/txtI"
                    },
                    {
                        "$ref": "#/$defs/value"
                    }
                ],
                "minItems": 1,
                "contains": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/cmb"
                        },
                        {
                            "$ref": "#/$defs/txtI"
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "exerType",
        "content"
    ]
}