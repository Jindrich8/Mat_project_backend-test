{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "$defs": {
        "value": {
            "type": "string"
        },
        "txtI": {
            "title": "Text input",
            "description": "Text input of Fill in blanks exercise.",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "txtI"
                }
            },
            "required": [
                "type"
            ]
        },
        "cmb": {
            "title": "Combobox",
            "description": "Combobox of Fill in blanks exercise.",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "cmb"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "minItems": 1
                },
                "selectedIndex": {
                    "$comment": "Outside of bounds of the values array = same as if it was null, i.e. no item is selected",
                    "oneOf": [
                        {
                            "type": "integer",
                            "minimum": 0
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "type",
                "values"
            ]
        }
    },
    "properties": {
        "exerType": {
            "type": "string",
            "const": "Doplnovacka"
        },
        "content": {
            "type": "array",
            "minItems": 1,
            "contains": {
                "oneOf": [
                    {
                        "$ref": "#/$defs/cmb"
                    },
                    {
                        "$ref": "#/$defs/txtI"
                    }
                ]
            },
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/$defs/cmb"
                    },
                    {
                        "$ref": "#/$defs/txtI"
                    },
                    {
                        "$ref": "#/$defs/value"
                    }
                ]
            }
        }
    },
    "required": [
        "exerType",
        "content"
    ]
}