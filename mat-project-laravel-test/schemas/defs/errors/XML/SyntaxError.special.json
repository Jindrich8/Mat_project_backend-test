{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "XML: Syntax error",
    "type": "object",
    "properties": {
        "code": {
            "const": 108,
            "type": "integer"
        },
        "errorData": {
            "title": "XML: Syntax error error data",
            "description": "Serves as error action specific data.",
            "type": "object",
            "properties": {
                "column": {
                    "title": "Error column",
                    "description": "Column of syntax error",
                    "type": "integer",
                    "minimum": 0
                },
                "line": {
                    "title": "Error line",
                    "description": "Line of syntax error",
                    "type": "integer",
                    "minimum": 0
                },
                "byteIndex": {
                    "title": "Error byte index",
                    "description": "Byte index of syntax error",
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "column",
                "line",
                "byteIndex"
            ]
        }
    },
    "required": [
        "code",
        "errorData"
    ]
}