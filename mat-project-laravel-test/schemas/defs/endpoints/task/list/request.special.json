{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "List tasks request",
    "description": "Request containing search filters for tasks.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "filters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "$ref": "@/defs/types/id.json"
                    }
                },
                "difficulty_range": {
                    "$ref":"@/defs/types/request/ordered_enum_range.json"
                },
                "class_range": {
                    "$ref": "@/defs/types/request/ordered_enum_range.json"
                }
            }
        },
        "order_by": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "filter_name": {
                        "type": "string",
                        "enum": [
                            "name",
                            "difficulty",
                            "class_range"
                        ]
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "ASC",
                            "DESC"
                        ]
                    }
                },
                "required": [
                    "filter_name",
                    "type"
                ]
            }
        },
        "cursor":{
            "type":["string","null"]
        },
        "limit":{
            "type":"number"
        }
    },
    "required": [
        "cursor",
        "limit"
    ]
}