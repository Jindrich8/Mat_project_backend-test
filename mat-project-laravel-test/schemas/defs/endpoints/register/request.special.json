{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Register request",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name":{
            "type":"string"
        },
        "email":{
            "type":"string",
            "format":"email"
        },
        "password":{
            "type":"string"
        },
        "password_confirmation":{
            "type":"string"
        },
        "role":{
            "type":"string",
            "enum":["teacher"]
        }
    },
    "required": [
        "name",
      "email",
      "password",
      "password_confirmation"
    ]
  }